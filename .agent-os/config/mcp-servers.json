{
  "mcpServers": {
    "context7": {
      "command": "context7-mcp",
      "args": [
        "--frameworks", "nextjs,tailwind,react,typescript,supabase,expo",
        "--version", "latest",
        "--include-examples", "true"
      ],
      "env": {
        "CONTEXT7_API_KEY": "${CONTEXT7_API_KEY}"
      },
      "enabled": true,
      "priority": 1
    },
    "supabase": {
      "command": "supabase-mcp",
      "args": [
        "--project-url", "${SUPABASE_URL}",
        "--enable-realtime", "true",
        "--enable-storage", "true"
      ],
      "env": {
        "SUPABASE_SERVICE_KEY": "${SUPABASE_SERVICE_KEY}",
        "SUPABASE_ANON_KEY": "${SUPABASE_ANON_KEY}"
      },
      "enabled": true,
      "priority": 2
    },
    "playwright": {
      "command": "playwright-mcp",
      "args": [
        "--dev-server", "http://localhost:3000",
        "--browsers", "chromium,firefox",
        "--mobile-viewports", "true",
        "--accessibility-audit", "true"
      ],
      "enabled": true,
      "priority": 3
    },
    "shadcn": {
      "command": "shadcn-mcp",
      "args": [
        "--framework", "nextjs",
        "--style", "default",
        "--typescript", "true",
        "--tailwind-version", "4"
      ],
      "enabled": true,
      "priority": 3
    },
    "filesystem": {
      "command": "mcp-server-filesystem",
      "args": [
        "--allowed-dirs", "/project", "/tmp", "/.agent-os"
      ],
      "enabled": true,
      "priority": 4
    },
    "git": {
      "command": "mcp-server-git",
      "args": [
        "--repository", ".",
        "--enable-stats", "true"
      ],
      "enabled": true,
      "priority": 4
    },
    "fetch": {
      "command": "mcp-server-fetch",
      "args": [
        "--timeout", "30",
        "--retry-count", "3",
        "--cache-ttl", "300"
      ],
      "enabled": false,
      "priority": 5
    }
  },
  "configuration": {
    "auto_enable": true,
    "fallback_to_standard_tools": true,
    "log_level": "info",
    "timeout": 60000
  }
}